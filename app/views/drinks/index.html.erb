<%= form_for @drink do |f| %>
<p>
  <%= f.label :brand %>
  <%= f.text_field :brand %>
</p>
  <p>
    <%= f.label :flavor %>
    <%= f.text_field :flavor %>
  </p>
  <p>
    <%= f.submit 'Add drink' %>
  </p>
<% end %>

<% @drinks.each do |drink| %>
<ul>
  <li>
    <%= drink.brand %>, <%= drink.flavor %>
  </li>
</ul>
<% end %>